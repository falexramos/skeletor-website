---
import "@/styles/tailwind.css";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";

import { languageList } from "@/i18n/ui";
import Sidebar from "@/components/Sidebar.astro";
import DarkModeToggle from "@/components/DarkModeToggle.astro";
import { useTranslations } from "@/i18n/utils";
import '../styles/global.css';

const currentLang = Astro.currentLocale || "es";
currentLang as keyof typeof languageList;

const translateLabels = useTranslations(
  currentLang as keyof typeof languageList
);
const siteTitle = translateLabels("site.title");
---

<!doctype html>
<html lang={currentLang} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Título SEO -->
    <title>{siteTitle}</title>

    <!-- Meta Tags SEO -->
    <meta
      name="description"
      content="Somos - Comunidad Cristiana, Te invitamos a ser parte de nuestra familia. Aquí encontrarás un lugar para crecer, servir y compartir el amor de Cristo."
    />
    <meta name="robots" content="index, follow" />
    <meta
      name="keywords"
      content="Somos - Comunidad Cristiana, Te invitamos a ser parte de nuestra familia. Aquí encontrarás un lugar para crecer, servir y compartir el amor de Cristo."
    />

    <!-- Open Graph y Twitter -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Somos-comunidad-Cristiana" />
    <meta
      property="og:description"
      content="Te invitamos a ser parte de nuestra familia. Aquí encontrarás un lugar para crecer, servir y compartir el amor de Cristo."
    />
    <meta
      property="og:image"
      content="https://www.iglesiasomos.es/imagen-previa.png"
    />
    <meta property="og:url" content="https://www.iglesiasomos.es/" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Somos-comunidad-Cristiana" />
    <meta
      name="twitter:description"
      content="Te invitamos a ser parte de nuestra familia. Aquí encontrarás un lugar para crecer, servir y compartir el amor de Cristo."
    />
    <meta
      name="twitter:image"
      content="https://www.iglesiasomos.es/imagen-twitter.png"
    />
    <meta
      name="google-site-verification"
      content="X4pVBsZ9Qujczrzm_M8EeRE0Kvom53DCD6zt2ffWXsI"
    />

    <!-- Favicon y iconos -->
    <link rel="icon" href="/favicon.webp" sizes="32x32" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <meta name="theme-color" content="#6B5B95" />

    <!-- Schema Markup JSON-LD -->
    <script type="application/ld+json">
      {
        "@context": "http://schema.org",
        "@type": "WebSite",
        "url": "https://www.iglesiasomos.es",
        "name": "Somos-Comunidad-Cristiana",
        "description": "Aquí encontrarás un lugar para crecer, servir y compartir el amor de Cristo.",
        "potentialAction": {
          "@type": "SearchAction",
          "target": "https://www.iglesiasomos.es/buscar?q={search_term_string}",
          "query-input": "required name=search_term_string"
        }
      }
    </script>
  </head>
<body class="min-h-screen bg-light dark:bg-dark flex flex-col">
    <Sidebar />

    <div class="flex flex-col min-h-screen">
      <Header>
        <DarkModeToggle slot="actions" />
      </Header>

      <main class="flex-1">
        <slot />
      </main>

      <Footer />
    </div>

  </body>
</html>
