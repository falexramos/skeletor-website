---
interface Props {
  title1: string;
  description1: string;
  title2: string;
  description2: string;
  subtitle1?: string;
  subtitle2?: string;
}

const { title1, description1, title2, description2, subtitle1, subtitle2 } = Astro.props;
---

<!-- Primera Sección -->
<section class="py-20 bg-white dark:bg-darkbg/80 relative overflow-hidden">
  <!-- Elementos decorativos sutiles -->
  <div class="absolute top-0 right-0 w-1/3 h-1/3 bg-primary/5 rounded-full transform translate-x-1/4 -translate-y-1/4 blur-3xl"></div>
  <div class="absolute bottom-0 left-0 w-1/4 h-1/4 bg-secondary/5 rounded-full transform -translate-x-1/4 translate-y-1/4 blur-2xl"></div>

  <div class="container mx-auto px-4 relative z-10">
    <div class="max-w-4xl mx-auto mb-16">
      <div class="text-center mb-12">
        
        <h2 class="text-3xl sm:text-4xl font-bold mb-4 text-primary dark:text-white">
          {title1}
        </h2>
        {subtitle1 && <p class="text-lg text-gray-600 dark:text-gray-300 max-w-3xl mx-auto mb-4">{subtitle1}</p>}
        <div class="h-1 w-24 bg-secondary mx-auto mt-4 rounded"></div>
      </div>

      <div class="prose prose-lg dark:prose-invert max-w-none text-justify leading-relaxed sm:leading-loose bg-white dark:bg-darkbg/50 p-6 sm:p-8 rounded-xl shadow-sm border border-gray-100 dark:border-white/5">
        <Fragment set:html={description1} />
      </div>
    </div>
  </div>
</section>

<!-- Segunda Sección con Diseño Mejorado -->
<section class="py-20 bg-gray-50 dark:bg-gray-900 relative overflow-hidden">
  <!-- Elementos decorativos modernos -->
  <div class="absolute inset-0 overflow-hidden">
    <!-- Gradiente suave en lugar de líneas diagonales -->
    <div class="absolute inset-0 bg-gradient-to-br from-primary/5 via-transparent to-secondary/5"></div>
    
    <!-- Círculos decorativos sutiles -->
    <div class="absolute top-20 left-[10%] w-64 h-64 bg-primary/3 rounded-full blur-3xl"></div>
    <div class="absolute bottom-20 right-[10%] w-80 h-80 bg-secondary/3 rounded-full blur-3xl"></div>
    <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-96 h-96 bg-white/3 dark:bg-white/1 rounded-full blur-3xl"></div>
  </div>

  <div class="container mx-auto px-4 relative z-10">
    <div class="max-w-4xl mx-auto">
      <div class="bg-white dark:bg-darkbg/50 rounded-2xl shadow-xl overflow-hidden border border-gray-100 dark:border-white/5 transform transition-transform hover:scale-[1.01]">
        <div class="p-8 sm:p-10">
          <div class="text-center mb-12">
            
            <h2 class="text-3xl sm:text-4xl font-bold mb-4 text-primary dark:text-white">
              {title2}
            </h2>
            {subtitle2 && <p class="text-lg text-gray-600 dark:text-gray-300 max-w-3xl mx-auto mb-4">{subtitle2}</p>}
            <div class="h-1 w-24 bg-secondary mx-auto mt-4 rounded"></div>
          </div>

          <div class="prose prose-lg dark:prose-invert max-w-none text-justify leading-relaxed sm:leading-loose">
            <Fragment set:html={description2} />
          </div>
        </div>

        <!-- Acento inferior más sutil -->
        <div class="h-1 bg-gradient-to-r from-primary/40 via-secondary/60 to-primary/40"></div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Responsive text size and spacing */
  .prose {
    font-size: 0.95rem; /* Base font size */
  }

  @media (min-width: 640px) {
    .prose {
      font-size: 1rem; /* Slightly larger on small screens */
    }
  }

  @media (min-width: 768px) {
    .prose {
      font-size: 1.05rem; /* Larger on medium screens */
    }
  }

  @media (min-width: 1024px) {
    .prose {
      font-size: 1.1rem; /* Even larger on large screens */
    }
  }

  /* Animation for hover effect */
  .transform {
    transition: transform 0.3s ease-in-out;
  }
</style>

