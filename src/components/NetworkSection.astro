---
interface Props {
  title1: string;
  description1: string;
  title2: string;
  description2: string;
}

const { title1, description1, title2, description2 } = Astro.props;
---

<!-- First Section -->
<section class="py-20 bg-white dark:bg-darkbg/80 relative overflow-hidden">
  <!-- Decorative Elements -->
  <div class="absolute top-0 right-0 w-1/3 h-1/3 bg-primary/5 rounded-full transform translate-x-1/4 -translate-y-1/4 blur-3xl"></div>
  <div class="absolute bottom-0 left-0 w-1/4 h-1/4 bg-secondary/5 rounded-full transform -translate-x-1/4 translate-y-1/4 blur-2xl"></div>
  
  <div class="container mx-auto px-4 relative z-10">
    <div class="max-w-4xl mx-auto mb-16">
      <div class="text-center mb-12">
      
        <h2 class="text-3xl sm:text-4xl font-bold mb-4 text-primary dark:text-white">
          {title1}
        </h2>
        <div class="h-1 w-24 bg-secondary mx-auto mt-4 rounded"></div>
      </div>
      
      <div class="prose prose-lg dark:prose-invert max-w-none text-justify leading-relaxed sm:leading-loose bg-white dark:bg-darkbg/50 p-6 sm:p-8 rounded-xl shadow-sm border border-gray-300 dark:border-white/5">
        <Fragment set:html={description1} />         
      </div>
    </div>
  </div>
  
  
</section>

<!-- Second Section with Improved Design -->
<section class="py-20 bg-lightbg/20 dark:bg-gray-900 relative overflow-hidden">
  <!-- Decorative Elements -->
  <div class="absolute top-0 left-0 w-1/3 h-1/3 bg-secondary/5 rounded-full transform -translate-x-1/4 -translate-y-1/4 blur-3xl"></div>
  <div class="absolute bottom-0 right-0 w-1/4 h-1/4 bg-primary/5 rounded-full transform translate-x-1/4 translate-y-1/4 blur-2xl"></div>
  
  <!-- Diagonal Pattern -->
  <div class="absolute inset-0 opacity-5 dark:opacity-10">
    <div class="absolute inset-0" style="background-image: linear-gradient(135deg, currentColor 25%, transparent 25%, transparent 50%, currentColor 50%, currentColor 75%, transparent 75%, transparent); background-size: 20px 20px;"></div>
  </div>
  
  <div class="container mx-auto px-4 relative z-10">
    <div class="max-w-4xl mx-auto">
      <div class="bg-white dark:bg-darkbg/50 rounded-2xl shadow-xl overflow-hidden border border-gray-100 dark:border-white/5 transform transition-transform hover:scale-[1.01]">
        <div class="p-8 sm:p-10">
          <div class="text-center mb-12">
            
            <h2 class="text-3xl sm:text-4xl font-bold mb-4 text-primary dark:text-white">
              {title2}
            </h2>
            <div class="h-1 w-24 bg-secondary mx-auto mt-4 rounded"></div>
          </div>
          
          <div class="prose prose-lg dark:prose-invert max-w-none text-justify leading-relaxed sm:leading-loose">
            <Fragment set:html={description2} />         
          </div>
        </div>
        
        <!-- Bottom Accent -->
        <div class="h-2 bg-gradient-to-r from-primary via-secondary to-primary"></div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Responsive text size and spacing */
  .prose {
    font-size: 1rem; /* Base font size */
  }
  
  @media (min-width: 640px) {
    .prose {
      font-size: 1.125rem; /* Slightly larger on small screens */
    }
  }
  
  @media (min-width: 768px) {
    .prose {
      font-size: 1.25rem; /* Larger on medium screens */
    }
  }
  
  @media (min-width: 1024px) {
    .prose {
      font-size: 1.375rem; /* Even larger on large screens */
    }
  }
  
  /* Animation for hover effect */
  .transform {
    transition: transform 0.3s ease-in-out;
  }
</style>

