---
interface Props {
  title: string;
  description: string;
  videoSrc: string;
  primaryButton: {
    text: string;
    href: string;
  };
  secondaryButton: {
    text: string;
    href: string;
  };
}

const { title, description, videoSrc, primaryButton, secondaryButton } = Astro.props;
---

<section class="relative h-screen flex items-center justify-center text-center overflow-hidden">
  <video
    autoplay
    muted
    loop
    class="absolute inset-0 w-full h-full object-cover"
  >
    <source src={videoSrc} type="video/mp4" />
    Tu navegador no soporta videos.
  </video>

  {/* Overlay with different opacity for light/dark modes */}
  <div class="absolute inset-0 bg-darkbg/50 dark:bg-darkbg/70 transition-colors duration-300"></div>

  <div class="relative z-10 max-w-4xl px-4">
    <h1 class="text-5xl md:text-6xl font-bold text-lightbg dark:text-white mb-6 animate-fade-in transition-colors duration-300">
      {title}
    </h1>
    <p class="text-xl text-lightbg/90 dark:text-gray-200 mb-8 animate-fade-in transition-colors duration-300">
      {description}
    </p>
    <div class="flex flex-col md:flex-row gap-4 justify-center animate-slide-up">
      <a
        href={primaryButton.href}
        class="bg-primary dark:bg-primary/90 text-lightbg px-8 py-3 rounded-lg 
               hover:bg-secondary dark:hover:bg-secondary/90 
               transition-all duration-300 
               transform hover:scale-105"
      >
        {primaryButton.text}
      </a>
      <a
        href={secondaryButton.href}
        class="bg-secondary dark:bg-secondary/90 text-lightbg px-8 py-3 rounded-lg 
               hover:bg-primary dark:hover:bg-primary/90 
               transition-all duration-300 
               transform hover:scale-105"
      >
        {secondaryButton.text}
      </a>
    </div>
  </div>
</section>

<style>
  @keyframes fade-in {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @keyframes slide-up {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fade-in 1s ease-out forwards;
  }

  .animate-slide-up {
    animation: slide-up 1s ease-out forwards;
  }
</style>