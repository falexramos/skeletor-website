
---
interface Props {
  title: string;
  subtitle: string;
  alignment?: "left" | "center" | "right";
  quoteText?: string;
  quoteAuthor?: string;
}

const {
  title,
  subtitle,
  alignment = "left",
  quoteText,
  quoteAuthor = "Equipo MIRES",
} = Astro.props;
---

<section class="py-16 bg-white dark:bg-darkbg relative overflow-hidden">
  <div class="container mx-auto px-4 relative z-10">
    <div class="max-w-4xl mx-auto">
      <div class={`mb-12 text-${alignment}`}>
        <!-- Title -->
        <h2 class="text-3xl sm:text-4xl font-bold mb-6 text-primary dark:text-white">
          {title}
        </h2>

        <!-- Unified Content Container -->
        <div class="bg-white dark:bg-darkbg/50 p-6 sm:p-8 rounded-2xl shadow-sm border border-gray-100 dark:border-white/5">
          <p class="text-lg text-gray-700 dark:text-gray-200 leading-relaxed text-justify">
            {subtitle}
            {quoteText && (
              <>
                <br />
                <span class="block mt-4 text-primary dark:text-secondary">
                  {quoteText}
                </span>
              </>
            )}
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
