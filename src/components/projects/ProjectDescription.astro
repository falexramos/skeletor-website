---
interface Props {
  title: string;
  subtitle: string;
  alignment?: 'left' | 'center' | 'right';
  quoteText?: string;
  quoteAuthor?: string;
}

const { 
  title, 
  subtitle, 
  alignment = 'left', 
  quoteText, 
  quoteAuthor = "Equipo MIRES" 
} = Astro.props;
---

<section class="py-20 bg-white dark:bg-darkbg/80">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto">
      <div class={`mb-12 text-${alignment}`}>
        <h2 class="text-3xl sm:text-4xl font-bold mb-3 text-primary dark:text-white">
          {title}
        </h2>
        
        <p class="text-lg text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
          {subtitle}
        </p>
        
        <div class={`h-1 w-24 bg-secondary mt-4 rounded ${alignment === 'center' ? 'mx-auto' : alignment === 'right' ? 'ml-auto' : ''}`}></div>
      </div>
      
      <div class="prose prose-lg dark:prose-invert max-w-none">
        <slot />
        
        {quoteText && (
          <div class="my-12 relative">
            <div class="absolute inset-0 bg-primary/5 dark:bg-primary/10 rounded-2xl transform rotate-1"></div>
            <blockquote class="relative bg-white dark:bg-darkbg p-6 md:p-8 rounded-2xl border-l-4 border-primary shadow-md">
              <svg class="absolute top-4 left-4 w-10 h-10 text-primary/10" fill="currentColor" viewBox="0 0 32 32">
                <path d="M10 8c-2.21 0-4 1.79-4 4v12h8v-8h-4v-4c0-1.1.9-2 2-2h2V8h-4zm12 0c-2.21 0-4 1.79-4 4v12h8v-8h-4v-4c0-1.1.9-2 2-2h2V8h-4z"/>
              </svg>
              <p class="text-gray-700 dark:text-gray-300 text-lg italic pl-8">
                {quoteText}
              </p>
              <footer class="mt-4 text-right text-gray-500 dark:text-gray-400">
                â€” {quoteAuthor}
              </footer>
            </blockquote>
          </div>
        )}
      </div>
    </div>
  </div>
</section>

