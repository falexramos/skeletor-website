---
// Props for the CTA component
interface Props {
  title: string;
  description: string;
  contactLink: string;
  donateLink: string;
  contactText: string;
  donateText: string;
}

const { title, description, contactLink, donateLink, contactText, donateText } = Astro.props;
---

<section class="py-20 bg-white dark:bg-darkbg">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto bg-primary dark:bg-primary/90 rounded-2xl overflow-hidden shadow-xl">
      <div class="p-8 md:p-12 relative">
        <div class="absolute top-0 right-0 w-64 h-64 bg-secondary/20 rounded-full translate-x-1/3 -translate-y-1/3 blur-3xl"></div>
        
        <div class="relative z-10 text-center">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">{title}</h2>
          <p class="text-xl text-white/90 mb-8 max-w-2xl mx-auto">
            {description}
          </p>
          
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href={contactLink} class="px-8 py-4 bg-white text-primary rounded-full text-lg font-medium hover:bg-white/90 transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-1">
              {contactText}
            </a>
            <a href={donateLink} class="px-8 py-4 bg-transparent text-white border-2 border-white/80 rounded-full text-lg font-medium hover:bg-white/10 transition-all duration-300 transform hover:-translate-y-1">
              {donateText}
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
