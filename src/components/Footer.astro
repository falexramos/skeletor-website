---

<footer class="bg-primary text-white py-12">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8 xl:gap-12">
      {footerSections.map(section => (
        <div class="flex flex-col space-y-4">
          <h3 class="text-xl font-bold text-secondary">{section.title}</h3>
          
          {section.mainContent && (
            <p class="text-white/80 leading-relaxed">
              {section.mainContent}
            </p>
          )}

          {section.hasSocial && (
            <div class="mt-4">
              <SocialLinks links={socialLinks} />
            </div>
          )}

          {section.links && (
            <ul class="space-y-2">
              {section.links.map(link => (
                <li>
                  <a 
                    href={link.href}
                    class="text-white/80 hover:text-secondary transition-colors duration-300"
                  >
                    {link.text}
                  </a>
                </li>
              ))}
            </ul>
          )}

          {section.contact && (
            <div class="space-y-2 text-white/80">
              <p>{section.contact.address}</p>
              <p>{section.contact.phone}</p>
              <p>{section.contact.email}</p>
            </div>
          )}
        </div>
      ))}
    </div>

    <hr class="my-8 border-white/10" />

    <div class="text-center text-sm text-white/80">
      &copy; {new Date().getFullYear()} MIRES. Todos los derechos reservados.
    </div>
  </div>
</footer>