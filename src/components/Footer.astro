const footerSections = [
  {
    title: "MIRES",
    mainContent: "Transformamos la solidaridad en acción, brindando apoyo integral a quienes más lo necesitan.",
    hasSocial: true
  },
  {
    title: "Proyectos",
    links: [
      { text: "DANA", href: "/projects/dana" },
      { text: "Alimentando Esperanza", href: "/projects/food" },
      { text: "Voluntariado", href: "/volunteer" }
    ]
  },
  {
    title: "Contacto",
    contact: {
      address: "Valencia, España",
      phone: "+34 722 630 688",
      email: "miresvalencia.es@gmail.com"
    }
  }
];
---

<footer class="relative bg-gradient-to-b from-darkbg to-darkbg/90 dark:from-darkbg dark:to-primary/90 text-white py-16 overflow-hidden">
  <!-- Decorative Elements -->
  <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-transparent via-secondary to-transparent opacity-50"></div>
  <div class="absolute -top-24 -right-24 w-48 h-48 rounded-full bg-secondary/5 blur-3xl"></div>
  <div class="absolute -bottom-24 -left-24 w-48 h-48 rounded-full bg-secondary/5 blur-3xl"></div>
  
  <!-- Contenedor Principal -->
  <div class="container mx-auto px-4 relative z-10">
    <!-- Logo y Nombre -->
    <div class="flex justify-center mb-12">
      <a href="/" class="flex items-center group">
        
        <LogoIcon className="w-12 h-12 text-white transition-colors duration-500" />

        
      </a>
    </div>

    <!-- Secciones del Footer -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-12 xl:gap-16">
      {footerSections.map((section, index) => (
        <div class="flex flex-col space-y-5 relative">
          <h3 class="text-xl font-bold text-secondary relative inline-block pb-3 after:content-[''] after:absolute after:bottom-0 after:left-0 after:w-12 after:h-0.5 after:bg-secondary">
            {section.title}
          </h3>
          
          {section.mainContent && (
            <p class="text-white/80 dark:text-gray-300 leading-relaxed">
              {section.mainContent}
            </p>
          )}

          {section.hasSocial && (
            <div class="mt-6 pt-2">
              <SocialLinks links={socialLinks} />
            </div>
          )}

          {section.links && (
            <ul class="space-y-3">
              {section.links.map(link => (
                <li class="transform transition-transform duration-300 hover:translate-x-2">
                  <a 
                    href={link.href}
                    class="text-white/80 dark:text-gray-300 hover:text-secondary dark:hover:text-secondary transition-colors duration-300 flex items-center"
                  >
                    <span class="mr-2 text-secondary">›</span>
                    {link.text}
                  </a>
                </li>
              ))}
            </ul>
          )}

          {section.contact && (
            <div class="space-y-4 text-white/80 dark:text-gray-300">
              <div class="flex items-start">
                <svg class="w-5 h-5 text-secondary mt-1 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                <span>{section.contact.address}</span>
              </div>
              <div class="flex items-start">
                <svg class="w-5 h-5 text-secondary mt-1 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
                <span>{section.contact.phone}</span>
              </div>
              <div class="flex items-start">
                <svg class="w-5 h-5 text-secondary mt-1 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
                <span class="hover:text-secondary transition-colors duration-300">
                  <a href={`mailto:${section.contact.email}`}>{section.contact.email}</a>
                </span>
              </div>
            </div>
          )}
        </div>
      ))}
    </div>

    <!-- Separador -->
    <div class="my-10 relative">
      <hr class="border-white/10 dark:border-gray-700/30" />
      <div class="absolute left-1/2 top-1/2 transform -translate-x-1/2 -translate-y-1/2 bg-darkbg dark:bg-darkbg px-4">
      </div>
    </div>

    <!-- Copyright -->
    <div class="flex flex-col md:flex-row justify-between items-center text-sm text-white/60 dark:text-gray-400">
      <span>&copy; {new Date().getFullYear()} MIRES. Todos los derechos reservados.</span>
      <span class="mt-3 md:mt-0">
        Design by 
        <a href="https://alcance-it.es/" target="_blank" rel="noopener noreferrer" class="text-secondary hover:text-secondary/80 transition-colors duration-300">
          Alcance IT
        </a>
      </span>
    </div>
  </div>
</footer>