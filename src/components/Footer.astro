const footerSections = [
  {
    title: "MIRES",
    mainContent: "Transformamos la solidaridad en acción, brindando apoyo integral a quienes más lo necesitan.",
    hasSocial: true
  },
  {
    title: "Proyectos",
    links: [
      { text: "DANA", href: "/projects/dana" },
      { text: "Alimentando Esperanza", href: "/projects/food" },
      { text: "Voluntariado", href: "/volunteer" }
    ]
  },
  {
    title: "Contacto",
    contact: {
      address: "Valencia, España",
      phone: "+34 722 630 688",
      email: "miresvalencia.es@gmail.com"
    }
