---
// src/components/CollaborationSection.astro
interface Props {
  title: string;
  description: string;
  buttonText: string;
  buttonHref: string;
}

const { title, description, buttonText, buttonHref } = Astro.props;
---

<section class="py-16 bg-gradient-to-b from-white to-gray-50 dark:from-gray-900 dark:to-gray-800">
  <div class="container mx-auto px-4">
    <div class="max-w-3xl mx-auto">
      <div class="bg-white dark:bg-gray-800 rounded-2xl p-8 shadow-lg">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">
          {title}
        </h2>
        <p class="text-gray-600 dark:text-gray-300 leading-relaxed mb-6">
          {description}
        </p>
        <div class="flex justify-center">
          <a 
            href={buttonHref}
            class="inline-flex items-center px-6 py-3 rounded-xl bg-primary hover:bg-primary/90 
                   text-white font-medium transition-colors duration-300"
          >
            {buttonText}
          </a>
        </div>
      </div>
    </div>
  </div>
</section>