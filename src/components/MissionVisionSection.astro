---
interface MissionVisionSectionProps {
  title: string; // Título de la sección
  mission: {
    title: string; // Título de la misión
    description: string; // Descripción de la misión
  };
  vision: {
    title: string; // Título de la visión
    description: string; // Descripción de la visión
  };
}

const { title, mission, vision } = Astro.props;
---

<section class="py-24 bg-lightbg dark:bg-darkbg relative overflow-hidden">
  <!-- Título Principal -->
  <div class="container mx-auto px-6 text-center mb-16">
    <h2 class="text-5xl font-bold text-primary dark:text-lightbg animate-fade-in">{title}</h2>
  </div>

  <!-- Contenedor de Misión y Visión -->
  <div class="container mx-auto px-6">
    <div class="grid md:grid-cols-2 gap-12 relative z-10">
      <!-- Misión -->
      <div class="relative bg-white dark:bg-gray-800 rounded-3xl p-8 shadow-2xl transform transition-all duration-500 hover:scale-105 group">
        <div class="absolute top-4 right-4 w-16 h-16 bg-secondary dark:bg-primary rounded-full flex items-center justify-center">
          <svg class="w-8 h-8 text-lightbg dark:text-darkbg" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <h3 class="text-2xl font-bold text-primary dark:text-lightbg mt-4 mb-4">{mission.title}</h3>
        <p class="text-lg text-gray-700 dark:text-gray-300 leading-relaxed">
          {mission.description}
        </p>
      </div>

      <!-- Visión -->
      <div class="relative bg-white dark:bg-gray-800 rounded-3xl p-8 shadow-2xl transform transition-all duration-500 hover:scale-105 group">
        <div class="absolute top-4 right-4 w-16 h-16 bg-primary dark:bg-secondary rounded-full flex items-center justify-center">
          <svg class="w-8 h-8 text-lightbg dark:text-darkbg" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
          </svg>
        </div>
        <h3 class="text-2xl font-bold text-primary dark:text-lightbg mt-4 mb-4">{vision.title}</h3>
        <p class="text-lg text-gray-700 dark:text-gray-300 leading-relaxed">
          {vision.description}
        </p>
      </div>
    </div>
  </div>

  <!-- Elementos de Fondo -->
  <div class="absolute inset-0 opacity-10 pointer-events-none dark:opacity-5">
    <div class="absolute top-0 left-0 w-48 h-48 bg-secondary dark:bg-primary rounded-full -translate-x-1/2 -translate-y-1/2"></div>
    <div class="absolute bottom-0 right-0 w-64 h-64 bg-primary dark:bg-secondary rounded-full translate-x-1/2 translate-y-1/2"></div>
  </div>
</section>