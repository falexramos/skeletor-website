---
interface Props {
  mission: {
    title: string;
    description: string;
  };
  vision: {
    title: string;
    description: string;
  };
}

const { mission, vision } = Astro.props;
---

<section class="py-20 bg-lightbg dark:bg-gray-900 transition-colors duration-300">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {/* Mission Card */}
      <div class="group bg-white dark:bg-gray-800 p-8 rounded-lg shadow-lg 
                  hover:shadow-xl dark:shadow-gray-900/50
                  transform hover:-translate-y-1 
                  transition-all duration-300 ease-in-out
                  border border-gray-100 dark:border-gray-700">
        <div class="relative">
          <h2 class="text-3xl font-bold text-primary dark:text-primary/90 mb-4 
                     group-hover:text-secondary dark:group-hover:text-secondary/90 
                     transition-colors duration-300">
            {mission.title}
          </h2>
          <div class="h-1 w-20 bg-primary dark:bg-primary/80 
                      group-hover:bg-secondary dark:group-hover:bg-secondary/80 
                      transition-colors duration-300 mb-6"></div>
          <p class="text-secondary dark:text-gray-300 
                    group-hover:text-gray-700 dark:group-hover:text-gray-200 
                    transition-colors duration-300 leading-relaxed">
            {mission.description}
          </p>
        </div>
      </div>

      {/* Vision Card */}
      <div class="group bg-white dark:bg-gray-800 p-8 rounded-lg shadow-lg 
                  hover:shadow-xl dark:shadow-gray-900/50
                  transform hover:-translate-y-1 
                  transition-all duration-300 ease-in-out
                  border border-gray-100 dark:border-gray-700">
        <div class="relative">
          <h2 class="text-3xl font-bold text-primary dark:text-primary/90 mb-4 
                     group-hover:text-secondary dark:group-hover:text-secondary/90 
                     transition-colors duration-300">
            {vision.title}
          </h2>
          <div class="h-1 w-20 bg-primary dark:bg-primary/80 
                      group-hover:bg-secondary dark:group-hover:bg-secondary/80 
                      transition-colors duration-300 mb-6"></div>
          <p class="text-secondary dark:text-gray-300 
                    group-hover:text-gray-700 dark:group-hover:text-gray-200 
                    transition-colors duration-300 leading-relaxed">
            {vision.description}
          </p>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @media (prefers-reduced-motion: reduce) {
    .group {
      transition: none !important;
      transform: none !important;
    }
  }
</style>