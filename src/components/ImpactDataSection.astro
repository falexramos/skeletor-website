---
interface ImpactItem {
  value: string;
  description: string;
}

interface Props {
  title: string;
  data: ImpactItem[];
  footerText: string; 
}

const { title, data, footerText } = Astro.props;
---

<section class="py-20 bg-lightbg">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-bold text-primary text-center mb-12">{title}</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {
        data.map((item) => (
          <div class="text-center">
            <p class="text-6xl font-bold text-secondary">{item.value}</p>
            <p class="text-xl text-primary">{item.description}</p>
          </div>
        ))
      }
    </div>
    {
      
        <div class="text-center mt-8">
          <span class="text-lg text-primary dark:text-secondary">
            {footerText}
          </span>
        </div>
      
    }
  </div>
</section>
