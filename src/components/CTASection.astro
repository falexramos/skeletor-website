---
interface Button {
  text: string;
  href: string;
}

interface Props {
  title: string;
  description: string;
  primaryButton: Button;
  secondaryButton: Button;
}

const { title, description, primaryButton, secondaryButton } = Astro.props;
---

<section class="py-20 bg-primary">
  <div class="container mx-auto px-4 text-center">
    <h2 class="text-4xl font-bold text-lightbg mb-6">{title}</h2>
    <p class="text-xl text-lightbg mb-8">{description}</p>
    <div class="flex flex-col md:flex-row gap-4 justify-center w-full md:w-auto">
      <a
        href={primaryButton.href}
        class="w-full md:w-auto bg-secondary text-lightbg px-8 py-4 md:py-3 rounded-lg hover:bg-primary transition-colors text-lg md:text-base font-medium"
      >
        {primaryButton.text}
      </a>
      <a
        href={secondaryButton.href}
        class="w-full md:w-auto bg-lightbg text-primary px-8 py-4 md:py-3 rounded-lg hover:bg-secondary hover:text-lightbg transition-colors text-lg md:text-base font-medium"
      >
        {secondaryButton.text}
      </a>
    </div>
  </div>
</section>