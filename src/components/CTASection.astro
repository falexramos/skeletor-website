---
interface Props {
  title: string;
  description: string;
  ctaText: string;
  ctaLink: string;
  className?: string;
  textColor?: string;
  buttonClassName?: string;
}

const {
  title,
  description,
  ctaText,
  ctaLink,
  className = "py-32",
  textColor = "text-dark dark:text-light",
  buttonClassName = "bg-accent text-dark hover:bg-accent/90"
} = Astro.props;
---

<section class={`${className} bg-light dark:bg-dark transition-colors`}>
  <div class="container mx-auto px-4">
    <h2 class={`large-text mb-8 ${textColor}`}>{title}</h2>
    <p class={`text-2xl mb-8 max-w-2xl ${textColor}`}>{description}</p>
    <a 
      href={ctaLink} 
      class={`inline-flex items-center px-8 py-4 ${buttonClassName} rounded-full text-lg font-bold transition-colors`}
    >
      {ctaText}
      <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
      </svg>
    </a>
  </div>
</section>

