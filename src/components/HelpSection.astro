---
import { Icon } from 'astro-icon/components';

interface HelpItem {
  icon: string;
  text: string;
}

interface Props {
  title: string;
  items: HelpItem[];
  className?: string;
  styles?: {
    bgColor?: string;
    titleColor?: string;
    textColor?: string;
    iconColor?: string;
  };
}

const { 
  title, 
  items, 
  className = "",
  styles = {
    bgColor: "bg-secondary dark:bg-secondary/20",
    titleColor: "dark:text-light",
    textColor: "dark:text-light/90",
    iconColor: "text-accent"
  }
} = Astro.props;
---

<div class={`rounded-3xl p-8 shadow-lg dark:shadow-secondary/10 ${styles.bgColor} ${className}`}>
  <h3 class={`text-2xl font-display font-bold mb-6 ${styles.titleColor}`}>{title}</h3>
  <ul class="space-y-4">
    {items.map((item) => (
      <li class="flex items-start">
        <Icon name={item.icon} class={`w-6 h-6 mt-1 mr-4 ${styles.iconColor}`} />
        <p class={`text-lg ${styles.textColor}`}>{item.text}</p>
      </li>
    ))}
  </ul>
</div>