---
interface HeroSectionProps {
  title: string;
  description: string;
  videoSrc?: string; // Video es opcional
  primaryButton?: {
    href: string;
    text: string;
  }; // Botón primario es opcional
  secondaryButton?: {
    href: string;
    text: string;
  }; // Botón secundario es opcional
}

const { title, description, videoSrc, primaryButton, secondaryButton } = Astro.props;
---
<section class="relative h-screen overflow-hidden">
  <!-- Video Background -->
  {videoSrc ? (
    <div class="absolute inset-0 w-full h-full">
      <video 
        autoplay 
        muted 
        loop 
        class="object-cover w-full h-full opacity-90"

      >
        <source src={videoSrc} type="video/mp4" />
      </video>
      <div class="absolute inset-0 "></div>
    </div>
  ) : (
    // Si no hay video, agregar un fondo sólido con un gradiente
    <div class="absolute inset-0 w-full h-full bg-primary bg-gradient-to-b from-primary/80 to-primary/40"></div>
  )}

  <!-- Hero Content -->
  <div class="relative z-10 container mx-auto px-6 h-full flex flex-col justify-center items-center text-center">
    <h1 class="text-5xl md:text-7xl font-bold text-lightbg mb-6 leading-tight max-w-4xl animate-fade-in">
      {title}
    </h1>
    <p class="text-xl md:text-2xl text-lightbg/90 mb-10 max-w-2xl animate-fade-in text-justify" style="animation-delay: 300ms;">
      {description}
    </p>

    <!-- Botones condicionales -->
    {(primaryButton || secondaryButton) && (
      <div class="flex flex-col sm:flex-row gap-4 animate-fade-in" style="animation-delay: 600ms;">
        {primaryButton && (
          <a 
            href={primaryButton.href} 
            class="px-8 py-4 bg-secondary text-lightbg rounded-full text-lg font-medium hover:bg-secondary/90 transition-all transform hover:scale-105 shadow-lg"
          >
            {primaryButton.text}
          </a>
        )}
        {secondaryButton && (
          <a 
            href={secondaryButton.href} 
            class="px-8 py-4 bg-lightbg/20 backdrop-blur-sm text-lightbg border-2 border-lightbg/50 rounded-full text-lg font-medium hover:bg-lightbg/30 transition-all transform hover:scale-105"
          >
            {secondaryButton.text}
          </a>
        )}
      </div>
    )}
  </div>


 
</section>