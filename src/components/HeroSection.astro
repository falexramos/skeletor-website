---
// components/HeroSection.astro
interface Props {
  videoUrl: string;
  title: string;
  highlightedWord: string;
  subtitle: string;
  ctaText: string;
  ctaLink: string;
  scheduleText: string;
  className?: string;
  overlayClassName?: string;
}

const {
  videoUrl,
  title,
  highlightedWord,
  subtitle,
  ctaText,
  ctaLink,
  scheduleText,
  className = "relative min-h-screen flex items-center pt-32 overflow-hidden",
  overlayClassName = "absolute inset-0 bg-dark/50 backdrop-blur-sm"
} = Astro.props;
---

<section class={className}>
  <div class="absolute inset-0 w-full h-full z-0">
    <video 
      autoplay 
      loop 
      muted 
      playsinline
      class="w-full h-full object-cover"
    >
      <source src={videoUrl} type="video/mp4">
    </video>
    <div class={overlayClassName}></div>
  </div>

  <div class="container mx-auto px-4 relative z-10 text-light">
    <h1 class="mega-text mb-8">
      {title}
      <span class="text-accent">{highlightedWord}</span><br />
      {subtitle}
    </h1>
    <div class="flex flex-col sm:flex-row gap-4 sm:items-center">
      <a href={ctaLink} class="inline-flex items-center px-8 py-4 bg-accent text-dark rounded-full text-lg font-bold hover:bg-opacity-90 transition-colors">
        {ctaText}
        <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
      <p class="text-xl text-light/80">{scheduleText}</p>
    </div>
  </div>
</section>

<style>
  video {
    -o-object-fit: cover;
    object-fit: cover;
    -o-object-position: center;
    object-position: center;
  }
</style>