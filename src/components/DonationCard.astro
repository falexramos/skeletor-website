---
// src/components/DonationCard.astro
interface Props {
  title: string;
  description: string;
  whatsapp?: {
    number: string;
    text: string;
  };
  bankDetails?: {
    title: string;
    organization: string;
    iban: string;
  };
}

const { title, description, whatsapp, bankDetails } = Astro.props;
---

<div class="bg-white dark:bg-gray-800 p-8 rounded-2xl shadow-lg">
  <h2 class="text-2xl font-bold text-primary dark:text-primary-400 mb-4">
    {title}
  </h2>
  <p class="text-gray-600 dark:text-gray-300 mb-4">
    {description}
  </p>
  
  {whatsapp && (
    <a
      href={`https://wa.me/${whatsapp.number}`}
      target="_blank"
      rel="noopener noreferrer"
      class="inline-block px-6 py-2 bg-secondary text-white rounded-lg hover:bg-secondary/90 transition-colors"
    >
      {whatsapp.text}
    </a>
  )}

  {bankDetails && (
    <div class="bg-lightbg dark:bg-gray-700 p-6 rounded-xl">
      <h3 class="text-xl font-bold text-primary dark:text-primary-400 mb-4">
        {bankDetails.title}
      </h3>
      <p class="text-gray-600 dark:text-gray-300 mb-2">
        {bankDetails.organization}
      </p>
      <p class="font-mono text-lg text-secondary dark:text-secondary-400">
        IBAN: {bankDetails.iban}
      </p>
    </div>
  )}
</div>