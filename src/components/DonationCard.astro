---
interface Props {
  title: string;
  description: string;
  options: string[];
  buttonText: string;
  link: string;
}

const { title, description, options, buttonText, link } = Astro.props;
---

<div class="bg-secondary dark:bg-dark/50 rounded-3xl p-12">
  <h3 class="text-3xl font-display font-bold mb-4">{title}</h3>
  <p class="text-xl opacity-70 mb-8">{description}</p>
  <div class="grid grid-cols-2 gap-4 mb-8">
    {options.map((amount) => (
      <a
        href={link}
        target="_blank"
        rel="noopener noreferrer"
        class="block"
      >
        <div 
          class="px-6 py-4 border-2 border-dark dark:border-light rounded-2xl text-lg font-bold hover:bg-accent hover:border-accent hover:text-dark transition-colors text-center cursor-pointer"
        >
          {amount}
        </div>
      </a>
    ))}
  </div>
  <a
    href={link}
    target="_blank"
    rel="noopener noreferrer"
    class="w-full px-8 py-4 bg-accent text-dark rounded-full text-lg font-bold hover:bg-opacity-90 transition-colors flex items-center justify-center"
  >
    {buttonText}
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="w-6 h-6 ml-2"
      fill="none"
      viewBox="0 0 24 24"
      stroke="currentColor"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M17 8l4 4m0 0l-4 4m4-4H3"
      />
    </svg>
  </a>
</div>