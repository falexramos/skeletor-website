---
// src/components/SocialLinks.astro
interface SocialLink {
  platform: string;
  url: string;
  icon: string;
}

interface Props {
  links: SocialLink[];
}

const { links } = Astro.props;
---

<div class="flex space-x-4">
  {links.map(link => (
    <a 
      href={link.url}
      class="text-white/80 hover:text-secondary transition-all duration-300 transform hover:scale-110 bg-white/5 hover:bg-white/10 p-2.5 rounded-full"
      aria-label={link.platform}
      target="_blank"
      rel="noopener noreferrer"
    >
      <Fragment set:html={link.icon} />
    </a>
  ))}
</div>