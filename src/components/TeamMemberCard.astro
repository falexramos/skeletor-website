---
// src/components/TeamMemberCard.astro
interface Props {
  name: string;
  role: string;
  description: string;
  image?: string;
}

const { name, role, description, image } = Astro.props;
---

<div class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg overflow-hidden transition-all duration-300 hover:shadow-xl">
  <div class="flex flex-col md:flex-row">
    {image && (
      <div class="md:w-1/3 relative aspect-square md:aspect-[3/4]">
        <img
          src={image}
          alt={name}
          class="w-full h-full object-cover"
          loading="lazy"
        />
        <div class="absolute inset-0 bg-gradient-to-t from-black/30 to-transparent md:bg-gradient-to-r" />
      </div>
    )}
    <div class="md:w-2/3 p-6 md:p-8">
      <div class="flex flex-col h-full justify-center">
        <h3 class="text-2xl font-bold text-gray-800 dark:text-white mb-2">
          {name}
        </h3>
        <p class="text-lg text-primary dark:text-primary-400 font-medium mb-4">
          {role}
        </p>
        <p class="text-gray-600 dark:text-gray-300 leading-relaxed">
          {description}
        </p>
      </div>
    </div>
  </div>
</div>