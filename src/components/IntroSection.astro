---
// src/components/IntroSection.astro
interface Props {
  text: string;
}

const { text } = Astro.props;
---

<section class="py-16 bg-lightbg dark:bg-gray-900">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto bg-white dark:bg-gray-800 rounded-2xl shadow-lg dark:shadow-gray-900/50 p-8 md:p-12">
      <p class="text-lg text-gray-700 dark:text-gray-200 leading-relaxed">
        {text}
      </p>
    </div>
  </div>
</section>