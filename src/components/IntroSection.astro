---
interface Props {
  text: string;
}

const { text } = Astro.props;
---

<section class="py-20 bg-gray-50 dark:bg-darkbg relative overflow-hidden">
  <!-- Elementos decorativos de fondo -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute top-0 right-0 w-1/3 h-1/3 bg-primary/5 rounded-full transform translate-x-1/4 -translate-y-1/4 blur-3xl"></div>
    <div class="absolute bottom-0 left-0 w-1/3 h-1/3 bg-secondary/5 rounded-full transform -translate-x-1/4 translate-y-1/4 blur-3xl"></div>
  </div>
  
  <div class="container mx-auto px-4 relative z-10">
    <div class="max-w-4xl mx-auto">
      <div class="bg-white dark:bg-darkbg/50 rounded-2xl shadow-lg overflow-hidden transition-all duration-300 border border-gray-100 dark:border-white/5">
        <div class="p-8 md:p-12 relative">
          <!-- Elemento decorativo superior -->
          <div class="absolute top-0 left-0 w-24 h-2 bg-primary rounded-br-lg"></div>
          
          <div class="pt-6">
            <p class="text-lg text-gray-700 dark:text-gray-300 leading-relaxed first-letter:text-4xl first-letter:font-bold first-letter:text-primary first-letter:mr-1 first-letter:float-left">
              {text}
            </p>
          </div>
          
          <!-- Elemento decorativo inferior -->
          <div class="absolute bottom-0 right-0 w-24 h-2 bg-secondary rounded-tl-lg"></div>
        </div>
      </div>
    </div>
  </div>
</section>

