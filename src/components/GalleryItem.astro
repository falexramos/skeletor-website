---
// components/GalleryItem.astro
interface Props {
  title: string;
  category: string;
  description: string;
  url: string;
  link: string; 
}

const { title, category, description, url, link } = Astro.props;
---

<a href={link} target="_blank" rel="noopener noreferrer" class="block">
  <div class="group relative aspect-square overflow-hidden rounded-3xl shadow-lg">
    <!-- Imagen principal con efecto de brillo al hacer hover -->
    <div class="absolute inset-0">
      <img
        src={url || "/placeholder.svg"}
        alt={title}
        class="h-full w-full object-cover transition-all duration-500 group-hover:scale-105 group-hover:brightness-110"
      />
    </div>
    
    <!-- Overlay con gradiente sutil solo en la parte inferior -->
    <div class="absolute inset-0 bg-gradient-to-t from-black/40 via-transparent to-transparent opacity-70 group-hover:opacity-80 transition-opacity"></div>
    
    <!-- Contenedor de texto en la parte inferior -->
    <div class="absolute bottom-0 left-0 right-0 p-4 z-10">
      <!-- Categoría -->
      <span class="inline-block px-2 py-1 rounded bg-accent/90 text-white text-xs font-bold mb-2 transform translate-y-0 transition-transform duration-300 group-hover:translate-y-0">{category}</span>
      
      <!-- Título siempre visible -->
      <h3 class="text-xl font-display font-bold text-white mb-1 drop-shadow-sm">{title}</h3>
      
      <!-- Descripción que aparece al hacer hover -->
      <p class="text-white/90 text-sm max-h-0 overflow-hidden group-hover:max-h-20 transition-all duration-300 ease-in-out">{description}</p>
    </div>
  </div>
</a>