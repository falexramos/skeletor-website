---
import BaseLayout from "../../layouts/BaseLayout.astro";
import CTASection from "@/components/CTASection.astro";
import { getRelativeLocaleUrl } from "astro:i18n";

const currentLang = Astro.currentLocale || "es";
// Define los datos de los proyectos
const projectsData = {
  title: "Nuestros Proyectos",
  subtitle: "Iniciativas que transforman vidas y comunidades",
  projects: [
    {
      id: "dana",
      title: "Proyecto DANA",
      description: "Centro logístico de donaciones para emergencias y catástrofes.",
      href: getRelativeLocaleUrl(currentLang, "/projects/dana"),
      image: "/assets/img/projects/mires_dana_7.avif"
    },
    {
      id: "coschooling",
      title: "Coschooling",
      description: "Espacio de educación alternativa y desarrollo comunitario.",
      href: getRelativeLocaleUrl(currentLang, "/projects/coschooling") ,
      image: "/assets/img/projects/mires_proyecto_coschooling.avif"
    },
    {
      id: "diversamente-habil",
      title: "Diversamente Hábil",
      description: "Centro de ocio y desarrollo para personas neurodivergentes.",
      href: getRelativeLocaleUrl(currentLang, "/projects/diversamente-habil"),
      image: "/assets/img/projects/mires_diversamente.avif"
    },
    {
      id: "alimentando-esperanza",
      title: "Alimentando Esperanza",
      description: "Apoyo a familias en situación de vulnerabilidad.",
      href: getRelativeLocaleUrl(currentLang, "/projects/alimentando-esperanza"),
      image: "/assets/img/projects/mires_alimentando_esperanza_8.avif"
    }
  ]
};

const ctaData = {
  title: "¿Quieres ser parte del cambio?",
  description:
    "Únete a nosotros y ayuda a transformar vidas a través de nuestros proyectos.",
  primaryButton: {
    text: "Contacta con Nosotros",
    href: "/contact"
  },
  secondaryButton: {
    text: "Haz una Donación",
    href: "/donate"
  }
};
---
<BaseLayout title="Proyectos - MIRES">
  {/* Hero Section */}
  <section class="py-20 bg-lightbg dark:bg-darkbg">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-bold text-primary mb-6">{projectsData.title}</h1>
      <p class="text-xl text-secondary max-w-3xl mx-auto">{projectsData.subtitle}</p>
    </div>
  </section>

  {/* Proyectos Grid */}
  <section class="py-20 bg-white dark:bg-gray-900 relative overflow-hidden">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {projectsData.projects.map((project, index) => (
          <a
            href={project.href}
            class="group bg-lightbg dark:bg-primary/10 rounded-2xl overflow-hidden shadow-lg transform transition-all duration-500 hover:scale-105 hover:shadow-2xl"
            style={`transition-delay: ${index * 100}ms`}
          >
            <div class="h-48 overflow-hidden">
              <img
                src={project.image || "/placeholder.svg?height=300&width=400"}
                alt={project.title}
                class="w-full h-full object-cover transition-all duration-700 group-hover:scale-110"
              />
            </div>
            <div class="p-6">
              <h3 class="text-xl font-bold text-primary mb-2 group-hover:text-secondary transition-colors">
                {project.title}
              </h3>
              <p class="text-gray-700 dark:text-gray-300">
                {project.description}
              </p>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  {/* Call to Action */}
  <CTASection {...ctaData} />
</BaseLayout>