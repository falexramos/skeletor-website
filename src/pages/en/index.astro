---
//src\pages\index.astro
import BaseLayout from '../../layouts/BaseLayout.astro';
import HeroSection from '../../components/HeroSection.astro';
import ProjectsSection from '../../components/ProjectsSection.astro';
import ImpactDataSection from '../../components/ImpactDataSection.astro';
import CTASection from '../../components/CTASection.astro';
import Partners from '@/components/Partners.astro';
import { getRelativeLocaleUrl } from "astro:i18n";

const currentLang = Astro.currentLocale || "es";

const heroData = {
  title: "We transform solidarity into action",
 
};

const missionVisionData = {
  mission: {
    title: "Mission",
    description: "Promote social development, solidarity, and the well-being of people in vulnerable situations by providing comprehensive support, inclusion, and opportunities that allow them to rebuild their lives with dignity and autonomy."
  },
  vision: {
    title: "Vision",
    description: "To be a reference organization in Spain and the world, promoting an efficient, sustainable, and innovative intervention model that transforms lives, strengthens communities, and promotes a more inclusive, resilient, and supportive society."
  }
};

const projectsData = {
  title: "Our Projects",
  projects: [
    {
      title: "DANA Project",
      description: "Logistics center for donations in emergencies and disasters.",
      href: getRelativeLocaleUrl(currentLang, "/projects/dana"),
      image:"/assets/img/projects/mires_dana_7.avif?height=300&width=400",
      status: "Active"
    },
    {
      title: "Feeding Hope",
      description: "Support for families in vulnerable situations.",
      href: getRelativeLocaleUrl(currentLang, "/projects/alimentando-esperanza"),
      image:"/assets/img/projects/mires_alimentando_esperanza_8.avif?height=300&width=400",
      status: "Active"
    },
    {
      title: "Coschooling",
      description: "Alternative education space and community development.",
      href: getRelativeLocaleUrl(currentLang, "/projects/coschooling") ,
      image:"/assets/img/projects/mires_proyecto_coschooling_2.avif?height=300&width=400",
      status: "Coming soon"
    },
    {
      title: "Differently Able",
      description: "Leisure and development center for neurodivergent people.",
      href: getRelativeLocaleUrl(currentLang, "/projects/diversamente-habil"),
      image:"/assets/img/projects/mires_diversamente.avif?height=300&width=400",
      status: "Coming soon"
    }
  ]
};

const impactData = {
  title: "Why is it necessary to help?",
  data: [
    {
      value: "4.5M",
      description: "People at risk of poverty in Spain"
    },
    {
      value: "30%",
      description: "Children in households with economic difficulties"
    },
    {
      value: "1,800",
      description: "Pallets of donations managed"
    }
  ],
  footerText: "We cannot change the entire world, but we can change the world for many people."
};

const ctaData = {
  title: "Join MIRES and transform the future",
  description: "Your support can change lives. Act today!",
  primaryButton: {
    text: "Make your donation",
    href: "/donate"
  },
  secondaryButton: {
    text: "Join as a volunteer",
    href: "/contact"
  }
};

---


<BaseLayout>
  <HeroSection {...heroData} />
  <!-- <MissionVisionSection {...missionVisionData} /> -->
  <ProjectsSection {...projectsData} />
  <ImpactDataSection {...impactData} />
  
  
  <Partners
  title="Partner Companies"
subtitle="Organizations that trust in our work"
/>  
  <CTASection {...ctaData} />
</BaseLayout>
