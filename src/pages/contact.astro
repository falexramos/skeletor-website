];

const heroData = {
  title: "Contacta con Nosotros",
  description:"Estamos aquí para ayudar",
  backgroundImage: "/assets/img/gallery/mires_mas_que_un_regalo_navidad_11.avif",
};
---

<BaseLayout title="Contacto - MIRES">
  <!-- Hero Section -->
  <SimpleHeroSection {...heroData} />
  
  
  <!-- Información de Contacto -->
  <section class="py-12 md:py-20 bg-lightbg dark:bg-darkbg overflow-hidden w-full">
    <div class="container mx-auto px-4 max-w-full">
      <div class="max-w-4xl mx-auto grid gap-6 md:gap-8">
        {contactInfo.map(item => (
          <a
            href={item.url}
            target={item.type === 'whatsapp' ? '_blank' : '_self'}
            rel={item.type === 'whatsapp' ? 'noopener noreferrer' : ''}
            class="group bg-white dark:bg-gray-800 rounded-2xl p-4 md:p-8 shadow-lg hover:shadow-xl transition-all duration-300 flex items-center gap-3 md:gap-6 overflow-hidden w-full"
          >
            <div class={`
              flex-shrink-0 w-12 h-12 md:w-16 md:h-16 rounded-full flex items-center justify-center
              ${item.type === 'whatsapp' ? 'bg-[#25D366]/10 text-[#25D366]' : 
                item.type === 'phone' ? 'bg-primary/10 dark:bg-white/70 text-primary' :
                'bg-secondary/10 text-secondary'}
            `}>
              <Fragment set:html={item.icon} />
            </div>
            <div class="min-w-0 flex-1 overflow-hidden">
              <p class="text-lg md:text-2xl font-bold text-gray-800 dark:text-white mb-1 truncate">
                {item.value}
              </p>
              <p class={`
                text-sm md:text-base truncate
                ${item.type === 'whatsapp' ? 'text-[#25D366]' : 
                  item.type === 'phone' ? 'text-primary dark:text-white' :
                  'text-secondary'}
              `}>
                {item.text}
              </p>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Asegurar que no haya scroll horizontal */
  html, body {
    overflow-x: hidden;
    width: 100%;
    position: relative;
  }
</style>

