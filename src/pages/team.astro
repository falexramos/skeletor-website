---
<BaseLayout title="Equipo - MIRES">
    <HeroSection {...heroData} />
  
    <section class="py-20 bg-lightbg dark:bg-darkbg">
      <div class="container mx-auto px-4">
        <SectionTitle title="Equipo de Liderazgo" />
        <div class="space-y-8 max-w-4xl mx-auto">
          {leadership.map(member => <TeamMemberCard {...member} />)}
        </div>
      </div>
    </section>
  
    <section class="py-20 bg-white dark:bg-darkbg">
      <div class="container mx-auto px-4">
        <SectionTitle title="Testimonios de Nuestros Voluntarios" />
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {testimonials.map(testimonial => <TestimonialCard {...testimonial} />)}
        </div>
      </div>
    </section>
  
    <CTASection {...ctaData} />
  </BaseLayout>
  
  <style>
    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }
  
    .animate-fade-in {
      animation: fadeIn 1s ease-out forwards;
    }
  
    .delay-150 {
      animation-delay: 150ms;
    }
  </style>