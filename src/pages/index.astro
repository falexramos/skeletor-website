---
// index.astro
import CTASection from '@/components/CTASection.astro';
import EventsSection from '@/components/EventsSection.astro';
import HeroSection from '@/components/HeroSection.astro';
import MissionSection from '@/components/MissionSection.astro';
import VisionSection from '@/components/VisionSection.astro';
import BaseLayout from '../layouts/Layout.astro';


const visionItems = [
  {
    title: "Amor",
    description: "El amor es el aroma que cada persona debe transmitir a los demás. Es la esencia de la Iglesia."
  },
  {
    title: "Perdon",
    description: "Perdonar es amar. Solo con el perdón puedes crecer y sobretodo madurar. El perdón son los brazos de la Iglesia para abrazar al dolido."
  },
  {
    title: "Servicio",
    description: "El servicio es el amor en acción. Sin práctica no hay verdad. El que ama y perdona, fluye en servir a los demás. Cuidar y sembrar en cada vida es una privilegio que Dios nos da."
  }
];

const events = [ 
{
    imageUrl: "/img/somos_mesas.avif",
    title: "Viernes, 19:00",
    date: "Mesas - Alfafar"
  },
  {
    imageUrl: "/img/somos_domigos.avif",
    title: "Domingo, 11:00 AM",
    date: "Super Reunión"
  }
];


---

<BaseLayout title="Inicio">
  <HeroSection
    videoUrl="/video/somos_video_principal_inicio_compressed.mp4"
    title="Una iglesia para"
    highlightedWord="gente,"
    subtitle="sin iglesia"
    ctaText="Conócenos"
    ctaLink="es/about"
    scheduleText="Vamos despacio por que vamos lejos."
  />

   <MissionSection
  title="Nuestra Misión"
  description="Exponer el Evangelio de Jesucristo."
  imageUrl="/img/somos_mision.avif"
  ctaText="Conoce más"
  ctaLink="/contact"
  styles={{
    sectionBg: "bg-accent dark:bg-accent",
    titleColor: "text-dark",
    textColor: "text-dark",
    ctaBg: "bg-dark",
    ctaColor: "text-accent dark:text-accent",
    ctaHoverBg: "hover:bg-dark/90 dark:hover:bg-bg-light/70"
  }}
/>

  <VisionSection title="Nuestros Pilares" items={visionItems} />

   ,
  <EventsSection 
    title="Nuestra Agenda" 
    events={events}
    className="py-16 px-8 bg-light dark:bg-dark"
    cardProps={{
      className: "relative overflow-hidden rounded-3xl bg-secondary dark:bg-secondary/20 shadow-md",
      titleClassName: "text-2xl font-display font-bold text-dark dark:text-light mb-2",
      dateClassName: "text-dark/70 dark:text-light/70"
    }}
  />


  <CTASection
    title="Bienvenido"
    description="En la familia Somos hay lugar para todos en la mesa."
    ctaText="Contáctanos"
    ctaLink="es/contact"
  />
</BaseLayout>