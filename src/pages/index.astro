---
//src\pages\index.astro
import BaseLayout from '../layouts/BaseLayout.astro';
import HeroSection from '../components/HeroSection.astro';
import ProjectsSection from '../components/ProjectsSection.astro';
import ImpactDataSection from '../components/ImpactDataSection.astro';
import CTASection from '../components/CTASection.astro';
import Partners from '@/components/Partners.astro';
import { getRelativeLocaleUrl } from "astro:i18n";

const currentLang = Astro.currentLocale || "es";

const heroData = {
  title: "Transformamos la solidaridad en acción.",
  
};

const projectsData = {
  title: "Nuestros Proyectos",
  projects: [
    {
      title: "Proyecto DANA",
      description: "Centro logístico de donaciones para emergencias y catástrofes.",
      href: getRelativeLocaleUrl(currentLang, "/projects/dana"),
      image:"/assets/img/projects/mires_dana_7.avif?height=300&width=400",
      status: "Activo"
    },
    {
      title: "Alimentando Esperanza",
      description: "Apoyo a familias en situación de vulnerabilidad.",
      href: getRelativeLocaleUrl(currentLang, "/projects/alimentando-esperanza"),
      image:"/assets/img/projects/mires_alimentando_esperanza_8.avif?height=300&width=400",
      status: "Activo"
    },
    {
      title: "Coschooling",
      description: "Espacio de educación alternativa y desarrollo comunitario.",
      href: getRelativeLocaleUrl(currentLang, "/projects/coschooling") ,
      image:"/assets/img/projects/mires_proyecto_coschooling_2.avif?height=300&width=400",
      status: "Próximamente"
    },
    {
      title: "Diversamente Hábil",
      description: "Centro de ocio y desarrollo para personas neurodivergentes.",
      href: getRelativeLocaleUrl(currentLang, "/projects/diversamente-habil"),
      image:"/assets/img/projects/mires_diversamente.avif?height=300&width=400",
      status: "Próximamente"
    }
  ]
};

const impactData = {
  title: "¿Por qué es necesario ayudar?",
  data: [
    {
      value: "4.5M",
      description: "Personas en riesgo de pobreza en España"
    },
    {
      value: "30%",
      description: "Niños en hogares con dificultades económicas"
    },
    {
      value: "1,800",
      description: "Pallets de donaciones gestionadas"
    }
  ],
  footerText: "No podemos cambiar el mundo entero, pero sí el mundo de muchas personas."
};

const ctaData = {
  title: "Súmate a MIRES y transforma el futuro",
  description: "Tu apoyo puede cambiar vidas. ¡Actúa hoy!",
  primaryButton: {
    text: "Haz tu donación",
    href: "/donate"
  },
  secondaryButton: {
    text: "Únete como voluntario",
    href: "/contact"
  }
};

---


<BaseLayout>
  <HeroSection {...heroData} />
  <ProjectsSection {...projectsData} />
  <ImpactDataSection {...impactData} />
  
  
  <Partners
  title="Empresas Colaboradoras"
  subtitle="Organizaciones que confían en nuestra labor"
/>  
  <CTASection {...ctaData} />
</BaseLayout>
