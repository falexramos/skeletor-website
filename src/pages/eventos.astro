---
import Layout from '../layouts/Layout.astro';
import { eventos } from '../data/eventos';

const eventosArray = Object.values(eventos);
---

<Layout title="Eventos - Skeletor">
  <main class="min-h-screen bg-light dark:bg-dark py-12">
    <div class="container mx-auto px-4">
      <!-- Header -->
      <div class="text-center mb-12">
        <h1 class="font-display text-4xl md:text-5xl font-bold text-dark dark:text-light mb-4">
          Nuestros Eventos
        </h1>
        <p class="text-lg text-dark/70 dark:text-light/70 max-w-2xl mx-auto">
          Descubre experiencias transformadoras que nutren el alma y fortalecen la fe
        </p>
      </div>

      <!-- Grid de eventos -->
      <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
        {eventosArray.map((evento) => (
          <article class="group relative overflow-hidden rounded-2xl bg-white dark:bg-dark/50 shadow-lg hover:shadow-xl transition-all duration-300 border border-dark/5 dark:border-light/10">
            <div class="absolute top-4 left-4 z-10">
              <span class="inline-block rounded-full bg-accent px-3 py-1 text-sm font-medium text-dark">
                Evento Especial
              </span>
            </div>
            
            <!-- Imagen del evento -->
            <div class="relative h-48 overflow-hidden">
              <picture>
                <source media="(max-width: 768px)" srcset={evento.imagenMovil}>
                <img 
                  src={evento.imagen || "/placeholder.svg"} 
                  alt={evento.titulo}
                  class="h-full w-full object-cover group-hover:scale-105 transition-transform duration-300"
                >
              </picture>
              <div class="absolute inset-0 bg-gradient-to-t from-dark/40 to-transparent"></div>
            </div>

            <!-- Contenido -->
            <div class="p-6">
              <h2 class="font-display text-xl font-bold text-dark dark:text-light mb-2 line-clamp-2">
                {evento.titulo}
              </h2>
              
              <p class="text-dark/70 dark:text-light/70 mb-4 line-clamp-3">
                {evento.descripcion}
              </p>

              <!-- Información del evento -->
              <div class="space-y-2 mb-6">
                <div class="flex items-center gap-2 text-sm">
                  <svg class="h-4 w-4 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                  </svg>
                  <span class="text-dark dark:text-light">{evento.ponente}</span>
                </div>
                
                <div class="flex items-center gap-2 text-sm">
                  <svg class="h-4 w-4 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                  <span class="text-dark dark:text-light">{evento.fecha}</span>
                </div>
                
                <div class="flex items-center gap-2 text-sm">
                  <svg class="h-4 w-4 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  <span class="text-dark dark:text-light">{evento.horario}</span>
                </div>
              </div>

              <!-- Precio y botón -->
              <div class="flex items-center justify-between">
                <span class="font-display text-2xl font-bold text-accent">
                  {evento.precio}
                </span>
                <a 
                  href={`/evento/${evento.id}`}
                  class="bg-dark dark:bg-light text-light dark:text-dark hover:bg-dark/90 dark:hover:bg-light/90 font-medium py-2 px-4 rounded-lg transition-colors"
                >
                  Ver detalles
                </a>
              </div>
            </div>
          </article>
        ))}
      </div>

      <!-- Mensaje si no hay eventos -->
      {eventos.length === 0 && (
        <div class="text-center py-12">
          <p class="text-dark/70 dark:text-light/70 text-lg">
            No hay eventos programados en este momento.
          </p>
        </div>
      )}
    </div>
  </main>
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
