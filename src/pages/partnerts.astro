---
import BaseLayout from "../layouts/BaseLayout.astro";
import Partners from "../components/Partners.astro";
import ActionGrid from "@/components/ActionGrid.astro";
import SimpleHeroSection from "@/components/SimpleHeroSection.astro";
import CTASection from "@/components/CTASection.astro";

const currentLang = Astro.currentLocale || "es";

const heroData = {
  title: "Organizaciones que Colaboran con MIRES",
};

const collaborationData = [
  {
    title: "Banco Santander",
    description: "Por su apoyo en la reactivación económica y la reconstrucción de comercios y hogares afectados por la DANA. Su compromiso con la inclusión social y el desarrollo sostenible nos permite devolver la esperanza a cientos de familias y pequeños emprendedores."
  },
  {
    title: "Hambre Cero",
    description: "Por su colaboración en la lucha contra la inseguridad alimentaria. Gracias a su apoyo, miles de familias en situación de vulnerabilidad han recibido alimentos y recursos esenciales para su bienestar."
  },
  {
    title: "Supermercados Más y Más – Grupo Fornes",
    description: "Por su valiosa contribución en la donación de alimentos, permitiéndonos llegar a más personas y garantizar el acceso a una alimentación digna para quienes más lo necesitan."
  }
];

const ctaData = {
  title: "¿Quieres ser parte del cambio?",
  description:
    "Únete a nosotros y ayuda a transformar vidas a través de nuestros proyectos.",
  primaryButton: {
    text: "Contacta con Nosotros",
    href: "/contact",
  },
  secondaryButton: {
    text: "Haz una Donación",
    href: "/donate",
  },
};
---

<BaseLayout title="Partners - MIRES">
  <!-- Hero Section -->
  <SimpleHeroSection {...heroData} />

  <!-- Partners Component -->
  <Partners
    title="Agradecemos especialmente a"
    subtitle="Organizaciones que hacen posible nuestra labor"
  />

  <!-- Detalles de Partners -->
  <ActionGrid 
    title=""
    actions={collaborationData}
  />

  <CTASection {...ctaData} />

</BaseLayout>
